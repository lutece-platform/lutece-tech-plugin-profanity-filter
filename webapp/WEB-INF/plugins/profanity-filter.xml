<?xml version="1.0" encoding="UTF-8"?>
<plug-in>
    <name>profanity-filter</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>1.0.0</version>
    <documentation></documentation>
    <installation></installation>
    <changes></changes>
    <user-guide></user-guide>
    <description>profanity-filter.plugin.description</description>
    <provider>profanity-filter.plugin.provider</provider>
    <provider-url>http://your.web.site.com</provider-url>
    <icon-url>images/admin/skin/feature_default_icon.png</icon-url>
    <copyright>Copyright (c) 2013 Your Company</copyright>
    <db-pool-required>1</db-pool-required>
    
    <core-version-dependency>
        <min-core-version>4.1.0</min-core-version>
        <max-core-version/>	
    </core-version-dependency>

    <!-- Admin features parameters -->
    <admin-features>
        <admin-feature>
            <feature-id>PROFANITYFILTER_MANAGEMENT</feature-id>
            <feature-title>profanityfilter.adminFeature.ManageProfanityfilter.name</feature-title>
            <feature-description>profanityfilter.adminFeature.ManageProfanityfilter.description</feature-description>
            <feature-level>0</feature-level>
            <feature-url>jsp/admin/plugins/profanityfilter/ManageWords.jsp</feature-url>
            <feature-icon-url></feature-icon-url>
      </admin-feature>
    </admin-features>    

    <!-- XPages parameters -->

    <applications>
        <application>
            <application-id>filter</application-id>
            <application-class>fr.paris.lutece.plugins.profanityfilter.web.FilterXPage</application-class>
        </application>
    </applications>


    <!-- Portlet parameters -->
    <portlets>
   </portlets>
   <javascript-files>
        <javascript-files-scope>portal</javascript-files-scope>
        <javascript-file>profanityfilter/profanityfilter.js</javascript-file>
    </javascript-files>
   
   
</plug-in>